<?xml version="1.0" ?>
<robot name="l1br" xmlns:xacro="http://ros.org/wiki/xacro">
    <xacro:include filename="diff_drive.xacro" />
    <xacro:include filename="sensors/imu_sensor.urdf.xacro" />
    <xacro:include filename="sensors/laser_sensor.urdf.xacro" />
    
    <xacro:property name="base_width" value="0.47"/>
    <xacro:property name="base_length" value="0.77"/>
    <xacro:property name="base_height" value="0.13"/>

    <xacro:property name="wheel_radius" value="0.0675"/>
    <xacro:property name="wheel_width" value="0.04"/>

    <xacro:property name="caster_wheel_radius" value="0.01"/>

    <xacro:property name="tray_radius" value="0.2"/>
    <xacro:property name="tray_width" value="0.041"/>

    <xacro:macro name="base_link">
        <link name="base_footprint">
        </link>

        <gazebo reference="base_link">
            <mu1 value="0.3" />
            <mu2 value="0.3" />
            <kp value="1000000.0" />
            <kd value="100" />
            <fdir1 value="0 0 0" />
        </gazebo>
        
        <joint name="base_joint" type="fixed">
            <parent link="base_link"/>
            <child link="base_footprint" />
            <origin xyz="0.0 0.0 -0.0793" rpy="0 0 3.14"/>
        </joint>

        <link name="base_link">
        <visual>
            <origin xyz="0  0  0" rpy="0 0 0"/>
            <geometry>
            <mesh filename="file:///$(find ugv_robots_description)/robots_description/meshes/l1br_meshes/chassis.dae" />
            </geometry>
        </visual>

        <collision>
            <origin rpy="0  0  0" xyz="0  0  0.01" />
            <geometry>
                <box size="${base_length} ${base_width} ${base_height}"/>
            </geometry>
        </collision>

        <inertial>
            <origin xyz="0  0  0.0" rpy="0 0 1.57"/>
            <mass value="2.4"/>
            <inertia ixx="0.12196" ixy="0.0" ixz="0.0"
                    iyy="0.04756" iyz="0.0"
                    izz="0.16276" />
        </inertial>
        
        </link>
    </xacro:macro>

    <xacro:macro name="traction_wheel_link" params="prefix pos_X pos_Y pos_Z pos_r pos_p pos_y">
        <joint name="joint_${prefix}" type="continuous">
            <parent link="base_link" />
            <child link="${prefix}" />
            <origin rpy="${pos_r} ${pos_p} ${pos_y}" xyz="${pos_X} ${pos_Y} ${pos_Z}" />
            <axis xyz="1 0 0" />
        </joint>

        <gazebo reference="${prefix}">
            <selfCollide>false</selfCollide>
            <mu1>1.0</mu1>
            <mu2>1.0</mu2>
            <kp>1000000.0</kp>
            <kd>100.0</kd>
        </gazebo>

        <link name="${prefix}">
            <inertial>
                <mass value="1" />
                <origin rpy="0 1.57 0" xyz="0 0 0" />
                <inertia ixx="${(2/5) * 1 * (wheel_radius * wheel_radius)}" ixy="0" ixz="0"
                         iyy="${(2/5) * 1 * (wheel_radius * wheel_radius)}" iyz="0"
                         izz="${(2/5) * 1 * (wheel_radius * wheel_radius)}" />
            </inertial>
            <collision name="${prefix}_collision">
                <origin rpy="0 1.57 0" xyz="0 0 0" />
                <geometry>
                    <cylinder length="${wheel_width}" radius="${wheel_radius}"/>
                </geometry>
            </collision>
            <visual name="${prefix}_visual">
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <mesh filename="file:///$(find ugv_robots_description)/robots_description/meshes/l1br_meshes/wheel.dae" scale="1 1 1" />
                </geometry>
            </visual>
        </link>
    </xacro:macro>

    <xacro:macro name="caster_wheel_link" params="prefix pos_X pos_Y pos_Z pos_r pos_p pos_y">
        <joint name="joint_${prefix}" type="continuous">
            <parent link="base_link" />
            <child link="${prefix}" />
            <origin rpy="${pos_r} ${pos_p} ${pos_y}" xyz="${pos_X} ${pos_Y} ${pos_Z}" />
            <axis xyz="1 0 0" />
        </joint>

        <gazebo reference="${prefix}">
            <selfCollide>false</selfCollide>
            <mu1>0.09</mu1>
            <mu2>0.09</mu2>
            <kp>10000000.0</kp>
            <kd>10000.0</kd>
        </gazebo>

        <link name="${prefix}">
            <inertial>
                <mass value="0.005" />
                <origin rpy="0 0 0" xyz="0 0 0" />
                <inertia ixx="${(2/5) * 0.005 * (caster_wheel_radius * caster_wheel_radius)}" ixy="0" ixz="0"
                         iyy="${(2/5) * 0.005 * (caster_wheel_radius * caster_wheel_radius)}" iyz="0"
                         izz="${(2/5) * 0.005 * (caster_wheel_radius * caster_wheel_radius)}" />
            </inertial>

            <collision name="${prefix}_collision">
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <sphere radius="0.01"/>
                </geometry>
            </collision>

            <visual name="${prefix}_visual">
                <origin rpy="0 0 0" xyz="0 0 0" />
                <geometry>
                    <sphere radius="${caster_wheel_radius}"/>
                </geometry>
            </visual>
        </link>
    </xacro:macro>

    <xacro:macro name="tray_link">
        <link name="tray_link">
        <visual name="tray_visual">
            <origin xyz="0 0 0.0118" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file:///$(find ugv_robots_description)/robots_description/meshes/l1br_meshes/tray.dae" scale="1 1 1"/>
            </geometry>
        </visual>
        
        <collision name="tray_collision">
            <origin xyz="0 -0.015047 0.1" rpy="0 0 0"/>
            <geometry>
            <cylinder length="${tray_width}" radius="${tray_radius}"/>
            </geometry>
        </collision>
        
        <inertial>
            <mass value="0.5" />
            <origin rpy="0 0 0" xyz="0 0 0" />
            <inertia ixx="0.0" ixy="0.0" ixz="0.0"
                    iyy="0.0" iyz="0.0"
                    izz="0.0" />
        </inertial>
        </link>

        <joint name="joint_tray" type="fixed">
                <parent link="base_link" />
                <child link="tray" />
                <origin rpy="0 0 0" xyz="0 0.015047 0" />
        </joint>
    </xacro:macro>

    <xacro:base_link/>

    <xacro:traction_wheel_link prefix="left_wheel_link" pos_X="0" pos_Y="0.296395" pos_Z="-0.0118" pos_r="0" pos_p="0" pos_y="1.57" />
    <xacro:traction_wheel_link prefix="right_wheel_link" pos_X="0" pos_Y="-0.296395" pos_Z="-0.0118" pos_r="0" pos_p="0" pos_y="1.57" />

    <xacro:caster_wheel_link prefix="back_left_caster_wheel_link" pos_X="0.32" pos_Y="0.07" pos_Z="-0.0693" pos_r="-1.57" pos_p="0" pos_y="0" />
    <xacro:caster_wheel_link prefix="back_right_caster_wheel_link" pos_X="0.32" pos_Y="-0.07" pos_Z="-0.0693" pos_r="-1.57" pos_p="0" pos_y="0" />
    <xacro:caster_wheel_link prefix="front_left_caster_wheel_link" pos_X="-0.32" pos_Y="0.07" pos_Z="-0.0693" pos_r="-1.57" pos_p="0" pos_y="0" />
    <xacro:caster_wheel_link prefix="front_right_caster_wheel_link" pos_X="-0.32" pos_Y="-0.07" pos_Z="-0.0693" pos_r="-1.57" pos_p="0" pos_y="0" />

    <xacro:tray/>

    <xacro:imu_sensor/>

    <xacro:laser_sensor
        update_rate="5"
        ray_count="360"
        min_angle="0"
        max_angle="6.28"
        min_range="0.12"
        max_range="8.0"
        topic_name="scan"
        pos_x="0.27"
        pos_y="0"
        pos_z="0.188"
    />

    <xacro:diff_drive_controlelr
        left_joint="joint_left_wheel"
        right_joint="joint_right_wheel"
        control_params="$(find ugv_robots_description)/robots_description/controller/control_params/l1br_control_params.yaml"
    />

</robot>